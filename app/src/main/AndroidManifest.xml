<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kufed.id.activity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splashscreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Register"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar_Statusbar_Black_Register" />
        <activity
            android:name=".ForgotPassword"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".CameraCapture"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Category_ListItem"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme_Black" />
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar_Statusbar_Black" />
        <activity
            android:name=".Detail_Product"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_TransparentActionbar" />
        <activity
            android:name=".Detail_Product_Normal"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_DetailProduct" />
        <activity
            android:name=".NotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar_Statusbar_Black" />
        <activity
            android:name=".NotificationActivity_AddMember"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar_Statusbar_Black" />
        <activity
            android:name=".ListLikedPost"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar_Statusbar_Black" />

        <activity
            android:name=".Detail_Cart"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar_Statusbar_Black" />

        <activity
            android:name=".Checkout"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar_Statusbar_Black" />

        <activity
            android:name=".Checkout_OnePage"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar_Statusbar_Black" />

        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_result"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_TransparentActionbar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/search_post" />
        </activity>

        <activity android:name=".Activity_Webview"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".NotificationsActivity_Test"
            android:label="@string/title_activity_notifications_activity__test"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="48399ac40125bcf8098b9fb56f24b6077d1837ac" />

    </application>

</manifest>