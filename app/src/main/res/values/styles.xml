<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_BlackActionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_overlay</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/black_overlay</item>
    </style>

    <style name="AppTheme_TransparentActionbar" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/color_black</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="AppTheme_WhiteActionbar" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_actionbar</item>
        <item name="colorPrimaryDark">@color/color_actionbar</item>
        <item name="colorAccent">@color/color_black</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenTheme_Black" parent="AppTheme_BlackActionbar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar_Statusbar_Black">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
        <!--   <item name="android:windowDrawsSystemBarBackgrounds">true</item> -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.NoActionBar_Statusbar_Black_Register" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--   <item name="android:windowDrawsSystemBarBackgrounds">true</item> -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme_DetailProduct" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="android:textColorSecondary">@color/color_black</item>

    </style>


    <style name="AppTheme.Purple">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/green_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorButtonNormal">@color/purple_500</item>
    </style>

    <style name="AppTheme.Teal">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorAccent">@color/red_a200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorButtonNormal">@color/teal_500</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorAccent">@color/pink_a200</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorButtonNormal">@color/blue_500</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorAccent">@color/blue_a200</item>
        <item name="colorPrimaryDark">@color/pink_700</item>
        <item name="colorButtonNormal">@color/pink_500</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorAccent">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorButtonNormal">@color/red_500</item>
    </style>

    <style name="AppTheme.BlueGrey">
        <item name="colorPrimary">@color/blue_grey_500</item>
        <item name="colorAccent">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/blue_grey_700</item>
        <item name="colorButtonNormal">@color/blue_grey_500</item>
    </style>

    <style name="AppTheme.Indigo">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorAccent">@color/pink_a200</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="colorButtonNormal">@color/indigo_500</item>
    </style>


    <style name="VeritransAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> 
        <item name="colorPrimaryDark">@color/colorSecondary</item> 
        <item name="colorControlHighlight">@color/dark_gray</item> 
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TransperentTheme" parent="VeritransAppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ScrollTheme">
    </style>

</resources>
